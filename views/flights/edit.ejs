<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/edit.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights/<%= flight._id %>?_method=PUT" method="POST">
    <label for="airline-select">Airline: </label>
    <select name="airline" value="<%= flight.airline %>"  id="airline-input">
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
      <option value="American">American</option>
    </select>
    <label for="airport-select">Airport: </label>
    <select name="airport" id="airport-select">
      <option value="<%= flight.airport %>"><%= flight.airport%></option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="DFW">DFW</option>
      <option value="AUS">AUS</option>
      <option value="SAN">SAN</option>
    </select>
    <label for="flightNo-input">Flight No.: </label>
    <input type="text" name="flightNo" id="flightNo-input" value="<%= flight.flightNo %>">
    <label for="daparts-input">Departs:</label>
    <input type="datetime-local" name="departs" id="departs-input" value="<%= flight.departs %>">
    <button type="submit">Save Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>